## Makefile
## File description:
## Makefile for infinAdd project
##

NAME	= 	binary_file

SRC		= 	$(wildcard src/*.c)

LIBDIR	= 	./lib

HDIR    =   ./include

FLAGS	=	-I$(HDIR) -L$(LIBDIR) -lmy

all:		$(NAME)

$(NAME):	make_lib
			gcc $(SRC) -o $(NAME) $(FLAGS)

make_lib:
			$(MAKE) -C $(LIBDIR)
			$(MAKE) clean -C $(LIBDIR)

clean:
			rm -f *.o

fclean:		clean
			rm -f $(NAME)

re: 		fclean all
